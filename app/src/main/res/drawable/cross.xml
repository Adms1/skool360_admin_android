<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="-135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="@android:color/white" />

                <corners android:radius="@dimen/_5sdp" />

            </shape>

        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="@android:color/white" />

                <corners android:radius="@dimen/_5sdp" />

            </shape>
        </rotate>
    </item>

</layer-list>