<resources xmlns:tools="http://schemas.android.com/tools">

        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
            <item name="windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            <item name="android:windowFullscreen">true</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/linear_color</item>
            <item name="android:textColorHint">@color/secondary_text</item>
            <item name="android:textSize">20sp</item>
            <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>

    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light">

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/linear_color</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/linear_color</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:background">@color/app_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/app_bg</item>
    </style>
    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="CalendarView" />

    <style name="CalendarView.MonthTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/scheduleheadertextcolor</item>
    </style>

    <style name="CalendarView.DayOfTheWeek">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/scheduleheadertextcolor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarView.DayOfTheMonth">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:minHeight">@dimen/minDayCellHeight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrushTextViewNormal" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/brush_font</item>
    </style>

</resources>
