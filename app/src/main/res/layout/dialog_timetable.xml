<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                card_view:cardBackgroundColor="@color/white1"
                card_view:cardCornerRadius="@dimen/_10sdp"
                card_view:cardElevation="@dimen/_5sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forgot_title_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center"
                        android:text="Add Lecture Details"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@id/main_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/day"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/addlecture_fromdate_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1.5"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="1dp"
                                android:textColor="@color/lightgray"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/lecture"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/addlecture_todate_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1.5"
                                android:enabled="false"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="1dp"
                                android:textColor="@color/lightgray"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/addlecture_subject_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/subject"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/addlecture_subject_spinner"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="2"
                                android:background="@drawable/dropdown_button"
                                android:forceHasOverlappingRendering="false"
                                android:gravity="left|center_vertical"
                                android:overlapAnchor="false"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingBottom="1dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/addlecture_teacher_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/teacher"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/addlecture_teacher_spinner"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="2"
                                android:background="@drawable/dropdown_button"
                                android:forceHasOverlappingRendering="false"
                                android:gravity="left|center_vertical"
                                android:overlapAnchor="false"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingBottom="1dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/list_linear"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.81"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/addlecture_submit_btn"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginRight="@dimen/_6sdp"
                                    android:background="@drawable/round_button"
                                    android:text="@string/Add"
                                    android:textAllCaps="true"
                                    android:textColor="@color/editTextcolor"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/close_cancel"
            android:elevation="@dimen/_15sdp"
            android:onClick="closeBtn"
            android:text="X"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>
</layout>