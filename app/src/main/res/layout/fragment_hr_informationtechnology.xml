<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white1">

        <include
            android:id="@+id/header"
            layout="@layout/main_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp" />

        <LinearLayout
            android:id="@+id/LL_dropdownContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_txt_View"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:text="@string/date"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/fromdate_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/linear_border"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <Button
                        android:id="@+id/todate_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/linear_border"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/round_button"
                android:text="@string/search"
                android:textAllCaps="true"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/LL_dropdownContainer">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtNoRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/no_records_found"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/exp_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:orientation="vertical">

                <include layout="@layout/layout_hr_transport_detail_header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ExpandableListView
                        android:id="@+id/ittool_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        android:childDivider="@android:color/transparent"
                        android:divider="@android:color/white"
                        android:groupIndicator="@null"
                        android:scrollbars="none" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:layout_centerInParent="true"
                android:text="@string/no_records_found"
                android:visibility="gone"/>


        </RelativeLayout>
    </RelativeLayout>

</layout>