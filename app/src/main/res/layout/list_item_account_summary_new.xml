<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/list_line"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/admission_fees_txt_View"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.2"
                    android:text="Fees"
                    android:textAlignment="textStart"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/admission_fees_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.7"
                    android:text="@string/studenttag"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/receipt_Admission_fees_txt_View"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.2"
                    android:text="Receipt"
                    android:textAlignment="textStart"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receipt_Admission_fees_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.7"
                    android:text="@string/studenttag"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/remaining_fees_txt_View"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.2"
                    android:text="Remaining Fees"
                    android:textAlignment="textStart"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/scheduleheadertextcolor"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/remaining_fees_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1.7"
                    android:text="@string/studenttag"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>