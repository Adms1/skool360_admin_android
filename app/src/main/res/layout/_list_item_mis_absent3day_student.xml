<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greybg_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/section_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/studentname_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/absentfrom_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/class_teacher_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:src="@drawable/ic_phone"
                android:tint="@color/scheduleheadertextcolor" />

            <ImageView
                android:id="@+id/iv_sms"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:src="@drawable/ic_sms"
                android:tint="@color/scheduleheadertextcolor" />

            <TextView
                android:id="@+id/grade_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_31sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/grno_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</layout>