<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_border2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text=""
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/txt_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/scheduleheadertextcolor"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/student_item_view_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:src="@drawable/arrow_1_42"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.32"
                android:text="@string/student"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/phone"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.18"
                android:gravity="center"
                android:text="SMS"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_header_less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:weightSum="5.8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:text="@string/student"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:text="Absent(in %)"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Class Teacher"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Phone"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="SMS"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_header_absent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/student"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Absent From"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Class Teacher"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Phone"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SMS"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_header_present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="@string/student"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_header_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:text="@string/student"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:text="@string/status"
                android:textAlignment="center"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </LinearLayout>

</layout>