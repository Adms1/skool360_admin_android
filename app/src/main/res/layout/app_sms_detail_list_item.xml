<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:weightSum="6"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/index_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:text="@string/index"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
        <TextView
            android:id="@+id/student_name_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="1.5"
            android:text="@string/student1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/student_grno_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="@string/grno"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/status"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="@string/grade_section"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <EditText
            android:id="@+id/mobileno_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="1.2"
            android:text="@string/smsnumber"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/box_border"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <CheckBox
            android:id="@+id/sms_chk"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.4"
            android:button="@drawable/check_uncheck"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>
</LinearLayout>