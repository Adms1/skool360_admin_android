<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_31sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_1sdp"
        android:paddingBottom="1dp"
        android:visibility="visible"
        android:background="@drawable/box_blue">

        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Class"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_10ssp"
            android:textAlignment="textStart"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/range_txt"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="@string/range_label"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/student_txt"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:text="@string/student_label"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/percentage_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="%"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />



        <TextView
            android:id="@+id/view_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />


        <ImageView
            android:id="@+id/iv_indicatior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_1_42"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_5sdp"/>

    </LinearLayout>

</LinearLayout>