<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        android:orientation="vertical"
        android:background="@drawable/box_blue">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/index_txt"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="@string/index"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/chapter_no_txt"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="@string/chapterno"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="textStart"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/chapter_name_txt"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="@string/chaptername"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/pdf_txt"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="@string/pdfheader"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_4sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/word_txt"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="@string/wordheader"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_4sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/view_txt"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_33sdp"
                android:text="View"
                android:paddingTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
    </LinearLayout>
</layout>