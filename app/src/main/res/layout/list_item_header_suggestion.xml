<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/linear_square_border"
        android:elevation="5dp"
        android:gravity="center">

        <View
            android:id="@+id/sug_colorChange"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/sug_tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/sug_tvSuggestDate"
            android:layout_toRightOf="@+id/sug_colorChange"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sug_tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/sug_colorChange"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/sug_tvSuggestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
