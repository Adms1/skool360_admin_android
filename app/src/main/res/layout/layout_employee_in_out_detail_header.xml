<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:visibility="visible"
        android:background="@drawable/box_blue">

        <TextView
            android:id="@+id/code_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/code"
            android:layout_weight="1.1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/name"
            android:layout_weight="1.9"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/ondate_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:text="@string/ondate"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/inoutdetails_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:layout_weight="1.4"
            android:text="@string/inoutdetails"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/workinghours_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:layout_weight="1.2"
            android:text="@string/workinghours"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</LinearLayout>
