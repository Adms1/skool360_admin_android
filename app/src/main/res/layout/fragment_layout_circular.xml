<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/app_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <include
                    android:id="@id/header"
                    layout="@layout/main_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp" />

                <LinearLayout
                    android:id="@+id/mainstudent_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/main_linear_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/select_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/select"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <RadioGroup
                                android:id="@+id/upload_type_group"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.1"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <RadioButton
                                    android:id="@+id/rb_enterAnns"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:checked="true"
                                    android:tag="1"
                                    android:text="Enter Announcment"
                                    android:textSize="@dimen/_11sdp" />

                                <RadioButton
                                    android:id="@+id/rb_uploadPdf"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:tag="0"
                                    android:text="Upload PDF"
                                    android:textSize="@dimen/_11sdp" />
                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_date1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/date_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/date"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <Button
                                android:id="@+id/date_btn"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.1"
                                android:background="@drawable/linear_border"
                                android:paddingLeft="@dimen/_4sdp"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/subject_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/subject"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <EditText
                                android:id="@+id/subject_edt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.1"
                                android:background="@drawable/linear_border"
                                android:paddingEnd="@dimen/_1sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/standard_txt_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="@string/standard"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.1"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/standard_group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_all"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:checked="true"
                                        android:tag="1"
                                        android:text="@string/all"
                                        android:textSize="@dimen/_10sdp" />

                                    <RadioButton
                                        android:id="@+id/rb_individual"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_1sdp"
                                        android:tag="0"
                                        android:text="@string/individual"
                                        android:textSize="@dimen/_10sdp" />

                                </RadioGroup>

                                <GridView
                                    android:id="@+id/standard_grid_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_100sdp"
                                    android:numColumns="3"
                                    android:scrollbars="none" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/schedule_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/is_schedule"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/cb_scheduledatetime"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_weight="2.1"
                                android:button="@drawable/check_uncheck"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="@string/schedule_date_time"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/date_time_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/date_time"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />


                            <Button
                                android:id="@+id/date_time_btn"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="2.1"
                                android:background="@drawable/calendar_line"
                                android:paddingBottom="1dp"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_pdf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/pdf_txt_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/upload_pdf"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <Button
                                android:id="@+id/btn_uploadPDF"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.2"
                                android:background="@drawable/upload_file_btn"
                                android:paddingBottom="1dp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="@string/choose_file"
                                android:textColor="@color/txt_blue"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_announcment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/anns_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/enter_circular"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <EditText
                                android:id="@+id/anns_edt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.1"
                                android:background="@drawable/linear_border"
                                android:paddingBottom="1dp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/discription_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/description"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/discription_edt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="1.65"
                                android:background="@drawable/linear_border"
                                android:gravity="left|top"
                                android:maxLines="15"
                                android:paddingBottom="1dp"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/order_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.77"
                                android:text="@string/order"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.14"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/order_spinner"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="1.65"
                                android:background="@drawable/dropdown_button"
                                android:forceHasOverlappingRendering="false"
                                android:gravity="center|center_vertical"
                                android:overlapAnchor="false"
                                android:paddingBottom="1dp"
                                android:paddingTop="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/status_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:text="@string/status"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text=":"
                                android:textColor="@color/scheduleheadertextcolor"
                                android:textSize="@dimen/_11sdp" />

                            <RadioGroup
                                android:id="@+id/status_group"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/active_chk"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:checked="true"
                                    android:tag="1"
                                    android:text="@string/active"
                                    android:textSize="@dimen/_10sdp" />

                                <RadioButton
                                    android:id="@+id/inactive_chk"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:tag="0"
                                    android:text="@string/inactive"
                                    android:textSize="@dimen/_10sdp" />
                            </RadioGroup>

                        </LinearLayout>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/upload_btn"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_button"
                            android:text="@string/Add"
                            android:textAllCaps="true"
                            android:textColor="@color/app_bg"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/txtNoRecords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="@string/no_records_found"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvExp_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_linear_add"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <include layout="@layout/announcement_header" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recycler_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/linear_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/announcment_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</layout>