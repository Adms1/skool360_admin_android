<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white1"
                card_view:cardCornerRadius="@dimen/_10sdp"
                card_view:cardElevation="@dimen/_5sdp"
                android:gravity="center"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forgot_title_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:gravity="center_vertical|center"
                        android:text="Approved Details"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linear_color"/>

                <LinearLayout
                    android:id="@id/main_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/select_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.77"
                            android:text="@string/leave_days"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="0.14"
                            android:text=":"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/leaveday_spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/dropdown_button"
                            android:forceHasOverlappingRendering="false"
                            android:overlapAnchor="false"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="1dp"
                            android:paddingTop="@dimen/_3sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.77"
                        android:text="@string/startdate"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.14"
                        android:text=":"
                        android:textColor="@color/scheduleheadertextcolor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fromdate_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1.5"
                        android:background="@drawable/calendar_line"
                        android:paddingBottom="1dp"
                        android:paddingLeft="@dimen/_1sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.77"
                            android:text="@string/enddate"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.14"
                            android:text=":"
                            android:textColor="@color/scheduleheadertextcolor"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/todate_btn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_weight="1.5"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:background="@drawable/calendar_line"
                            android:paddingBottom="1dp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/list_linear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.81"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/submit_btn"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:background="@drawable/round_button"
                                android:text="Save"
                                android:onClick=""
                                android:textAllCaps="true"
                                android:textColor="@color/editTextcolor"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                   </LinearLayout>

                 </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/close_cancel"
            android:text="X"
            android:elevation="@dimen/_15sdp"
            android:onClick="closeBtn"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>
</layout>