<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_blue"
        android:orientation="horizontal"
        android:visibility="visible"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:paddingTop="@dimen/_8sdp"
        android:weightSum="1">

        <!--<TextView-->
        <!--android:id="@+id/index_txt"-->
        <!--android:layout_width="@dimen/_60sdp"-->
        <!--android:layout_height="@dimen/_31sdp"-->
        <!--android:text="@string/index"-->
        <!--android:paddingTop="@dimen/_7sdp"-->
        <!--android:textAlignment="center"-->
        <!--android:paddingLeft="@dimen/_2sdp"-->
        <!--android:textColor="@color/app_bg"-->
        <!--android:textSize="@dimen/_11sdp" />-->

        <TextView
            android:id="@+id/studentname_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/searchstudent"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/grnno_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/grno"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/grade"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/view_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="@string/view"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

</LinearLayout>